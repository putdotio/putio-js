{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
